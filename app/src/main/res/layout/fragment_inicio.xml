<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="#F5F5F5">

    <!-- Header con fondo rosa -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/montalvo_pink"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Menu Icon (Hamburguesa) -->
    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_reorder"
        android:padding="8dp"
        android:contentDescription="Menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@android:color/white"/>

    <!-- Logo Montalvo en el centro del header -->
    <ImageView
        android:id="@+id/headerLogoImage"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_montalvo"
        android:translationY="-23dp"
        android:contentDescription="Logo Montalvo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white"/>

    <!-- Sección: Promociones del mes -->
    <LinearLayout
        android:id="@+id/promocionesHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvPromocionesDelMes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Promociones del mes"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvSearchFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DE MENOR A MAYOR PRECIO"
            android:textSize="10sp"
            android:textColor="#999999"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"/>

        <ImageView
            android:id="@+id/btnSearchFilter"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_dropdown"
            android:contentDescription="Filtrar"
            app:tint="#999999"/>

    </LinearLayout>

    <!-- ScrollView para las promociones -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewPromotions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/promocionesHeader"
        app:layout_constraintBottom_toTopOf="@id/paginationIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Tarjeta de Promoción 1 - MANICURE 20% -->
            <androidx.cardview.widget.CardView
                android:id="@+id/promotionCard1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/montalvo_pink">

                    <!-- Imagen de la modelo -->
                    <ImageView
                        android:id="@+id/imgPromotion1"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:scaleType="centerCrop"

                        android:contentDescription="Manicure"/>

                    <!-- Contenido del texto -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/imgPromotion1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MANICURE"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:textColor="@android:color/white"
                            android:textSize="56sp"
                            android:textStyle="bold"
                            android:layout_marginTop="-8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%\nDscto"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginTop="-12dp"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de Promoción 2 - DEPILACIÓN 30% -->
            <androidx.cardview.widget.CardView
                android:id="@+id/promotionCard2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E89BC3">

                    <!-- Imagen de depilación -->
                    <ImageView
                        android:id="@+id/imgPromotion2"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:scaleType="centerCrop"

                        android:contentDescription="Depilación"/>

                    <!-- Contenido del texto -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@id/imgPromotion2"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEPILACIÓN"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30"
                            android:textColor="@android:color/white"
                            android:textSize="56sp"
                            android:textStyle="bold"
                            android:layout_marginTop="-8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%\nDscto"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginTop="-12dp"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de Promoción 3 - PELUQUERÍA 50% -->
            <androidx.cardview.widget.CardView
                android:id="@+id/promotionCard3"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/montalvo_pink">

                    <!-- Imagen de peluquería -->
                    <ImageView
                        android:id="@+id/imgPromotion3"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:scaleType="centerCrop"

                        android:contentDescription="Peluquería"/>

                    <!-- Contenido del texto -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/imgPromotion3"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PELUQUERÍA"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textColor="@android:color/white"
                            android:textSize="56sp"
                            android:textStyle="bold"
                            android:layout_marginTop="-8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%\nDscto"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginTop="-12dp"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Indicadores de paginación (5 círculos) -->
    <LinearLayout
        android:id="@+id/paginationIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/indicator1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/indicator_circle"
            android:backgroundTint="@color/montalvo_pink"/>

        <View
            android:id="@+id/indicator2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/indicator_circle"
            android:backgroundTint="#CCCCCC"/>

        <View
            android:id="@+id/indicator3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/indicator_circle"
            android:backgroundTint="#CCCCCC"/>

        <View
            android:id="@+id/indicator4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/indicator_circle"
            android:backgroundTint="#CCCCCC"/>

        <View
            android:id="@+id/indicator5"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/indicator_circle"
            android:backgroundTint="#CCCCCC"/>

    </LinearLayout>

    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/montalvo_pink"
        android:gravity="center"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icono de Ofertas -->
        <ImageView
            android:id="@+id/navOffers"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_local_offer"
            android:contentDescription="Ofertas"
            app:tint="@android:color/white"/>

        <!-- Icono de Favoritos -->
        <ImageView
            android:id="@+id/navFavorites"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_star"
            android:contentDescription="Favoritos"
            app:tint="@android:color/white"/>

        <!-- Icono de Búsqueda -->
        <ImageView
            android:id="@+id/navSearch"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_search"
            android:contentDescription="Buscar"
            app:tint="@android:color/white"/>

        <!-- Icono de Carrito -->
        <ImageView
            android:id="@+id/navCart"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_shopping_cart"
            android:contentDescription="Carrito"
            app:tint="@android:color/white"/>

        <!-- Icono de Ubicación -->
        <ImageView
            android:id="@+id/navLocation"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_location_on"
            android:contentDescription="Ubicación"
            app:tint="@android:color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>