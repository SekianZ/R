<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Busqueda.BusquedaFragment">

    <!-- CONTENIDO PRINCIPAL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <!-- Header con fondo rosa -->
        <View
            android:id="@+id/headerBackground"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/montalvo_pink"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Menu Icon (Hamburguesa) -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:contentDescription="Menu"
            android:elevation="10dp"
            android:padding="8dp"
            android:src="@drawable/ic_reorder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <!-- Logo Montalvo en el centro del header -->
        <ImageView
            android:id="@+id/headerLogoImage"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:contentDescription="Logo Montalvo"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_montalvo"
            android:translationY="-23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <!-- Barra de búsqueda -->
        <androidx.cardview.widget.CardView
            android:id="@+id/searchCard"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Buscar"
                    app:tint="#999999" />

                <EditText
                    android:id="@+id/etBuscar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Buscar"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Contenido principal con búsquedas -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <!-- Header: Búsquedas recientes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Búsquedas recientes"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btnLimpiarHistorial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:text="Limpiar historial de búsquedas"
                        android:textColor="@color/montalvo_pink"
                        android:textSize="10sp" />

                </LinearLayout>

                <!-- Lista de búsquedas recientes -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerBusquedasRecientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_busqueda_reciente" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- Barra de navegación inferior -->
        <LinearLayout
            android:id="@+id/bottomNavigation"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/montalvo_pink"
            android:elevation="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Icono de Ofertas -->
            <LinearLayout
                android:id="@+id/navOffers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/navOffersIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/navOffersIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Ofertas"
                    android:src="@drawable/ic_local_offer"
                    app:tint="@color/white" />
            </LinearLayout>

            <!-- Icono de Favoritos -->
            <LinearLayout
                android:id="@+id/navFavorites"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/navFavoritesIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/navFavoritesIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Favoritos"
                    android:src="@drawable/ic_star"
                    app:tint="@color/white" />
            </LinearLayout>

            <!-- Icono de Búsqueda -->
            <LinearLayout
                android:id="@+id/navSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/navSearchIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/navSearchIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Buscar"
                    android:src="@drawable/ic_search"
                    app:tint="@color/white" />
            </LinearLayout>

            <!-- Icono de Carrito -->
            <LinearLayout
                android:id="@+id/navCart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/navCartIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/navCartIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Carrito"
                    android:src="@drawable/ic_shopping_cart"
                    app:tint="@color/white" />
            </LinearLayout>

            <!-- Icono de Ubicación -->
            <LinearLayout
                android:id="@+id/navLocation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/navLocationIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/navLocationIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Ubicación"
                    android:src="@drawable/ic_location_on"
                    app:tint="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- MENÚ LATERAL (igual que los otros fragments) -->
    <ScrollView
        android:id="@+id/navigationDrawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/montalvo_pink"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Header del menú -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C2185B"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_montalvo" />

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stephanie Cayo"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:text="steph.cayo@gmail.com"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Opciones del menú (copiar del InicioFragment) -->

        </LinearLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>