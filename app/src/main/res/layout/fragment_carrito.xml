<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Carrito.CarritoFragment">

    <!-- CONTENIDO PRINCIPAL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <!-- Header con fondo rosa -->
        <View
            android:id="@+id/headerBackground"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/montalvo_pink"
            android:elevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Menu Icon (Hamburguesa) -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_reorder"
            android:padding="8dp"
            android:contentDescription="Menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@android:color/white"/>

        <!-- Logo Montalvo en el centro del header -->
        <ImageView
            android:id="@+id/headerLogoImage"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_montalvo"
            android:elevation="10dp"
            android:translationY="-23dp"
            android:contentDescription="Logo Montalvo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@android:color/white"/>

        <!-- Tabs: PRODUCTO / SERVICIO -->
        <LinearLayout
            android:id="@+id/tabsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/headerBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tabProducto"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="PRODUCTO"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@color/montalvo_pink"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tabServicio"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="SERVICIO"
                android:textColor="#666666"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

        <!-- Contenido principal con scroll -->
        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tabsContainer"
            app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:paddingBottom="16dp">

                <!-- Mensaje -->
                <TextView
                    android:id="@+id/tvMensajeEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¡Tu compra ya puede ser retirada!"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@android:color/white"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="2dp"/>

                <!-- Card del Producto -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#E8D5E5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Título del producto -->
                        <TextView
                            android:id="@+id/tvProductName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="REVLON conditioner 250ml"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="16dp"/>

                        <!-- Container con imagen y detalles -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Detalles del producto -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <!-- Categoría -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="4dp">
                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:text="CATEGORÍA:"
                                        android:textSize="11sp"
                                        android:textColor="#666666"/>
                                    <TextView
                                        android:id="@+id/tvCategory"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="HOMBRE"
                                        android:textSize="11sp"
                                        android:textColor="@android:color/black"
                                        android:textStyle="bold"/>
                                </LinearLayout>

                                <!-- Precio unitario -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="4dp">
                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:text="PRECIO UNITARIO:"
                                        android:textSize="11sp"
                                        android:textColor="#666666"/>
                                    <TextView
                                        android:id="@+id/tvUnitPrice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="S/69.00"
                                        android:textSize="11sp"
                                        android:textColor="@android:color/black"
                                        android:textStyle="bold"/>
                                </LinearLayout>

                                <!-- Cantidad -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="4dp">
                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:text="CANTIDAD:"
                                        android:textSize="11sp"
                                        android:textColor="#666666"/>
                                    <TextView
                                        android:id="@+id/tvQuantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2"
                                        android:textSize="11sp"
                                        android:textColor="@android:color/black"
                                        android:textStyle="bold"/>
                                </LinearLayout>

                                <!-- Costo envío -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="4dp">
                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:text="COSTO ENVIO:"
                                        android:textSize="11sp"
                                        android:textColor="#666666"/>
                                    <TextView
                                        android:id="@+id/tvShippingCost"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="S/0.000"
                                        android:textSize="11sp"
                                        android:textColor="@android:color/black"
                                        android:textStyle="bold"/>
                                </LinearLayout>

                                <!-- Total -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="12dp">
                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:text="TOTAL:"
                                        android:textSize="11sp"
                                        android:textColor="#666666"/>
                                    <TextView
                                        android:id="@+id/tvTotal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="S/138.000"
                                        android:textSize="11sp"
                                        android:textColor="@android:color/black"
                                        android:textStyle="bold"/>
                                </LinearLayout>

                                <!-- Botón pedido reiniciado -->
                                <Button
                                    android:id="@+id/btnPedidoReiniciado"
                                    android:layout_width="wrap_content"
                                    android:layout_height="36dp"
                                    android:text="¿donde pedido reiniciado?"
                                    android:textSize="10sp"
                                    android:textColor="@android:color/white"
                                    android:backgroundTint="#666666"
                                    android:paddingStart="12dp"
                                    android:paddingEnd="12dp"
                                    android:textAllCaps="false"/>

                            </LinearLayout>

                            <!-- Imagen del producto -->
                            <ImageView
                                android:id="@+id/ivProductImage"
                                android:layout_width="120dp"
                                android:layout_height="180dp"
                                android:src="@drawable/ic_montalvo"
                                android:scaleType="centerCrop"
                                android:layout_marginStart="8dp"
                                android:contentDescription="Producto"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Estado de la compra -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado de tu compra"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Indicadores de progreso -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Paso 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_shopping_cart"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/montalvo_pink"
                            android:padding="12dp"
                            app:tint="@android:color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Orden de compra\nrealizada"
                            android:textSize="10sp"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="0.5"
                        android:background="@color/montalvo_pink"
                        android:layout_marginBottom="30dp"/>

                    <!-- Paso 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_favorite"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/montalvo_pink"
                            android:padding="12dp"
                            app:tint="@android:color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compra lista\npara recoger"
                            android:textSize="10sp"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="0.5"
                        android:background="@color/montalvo_pink"
                        android:layout_marginBottom="30dp"/>

                    <!-- Paso 3 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_favorite"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/montalvo_pink"
                            android:padding="12dp"
                            app:tint="@android:color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compra retirada"
                            android:textSize="10sp"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="0.5"
                        android:background="#CCCCCC"
                        android:layout_marginBottom="30dp"/>

                    <!-- Paso 4 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_star"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="#CCCCCC"
                            android:padding="12dp"
                            app:tint="@android:color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Califica tu\ncompra"
                            android:textSize="10sp"
                            android:textColor="#999999"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- Información adicional -->
                <TextView
                    android:id="@+id/tvInformacionRetiro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¡Hola Stephanie,\nSu N° de orden de compra: 5998669623\nTe informamos que tu producto ya está listo, ahora puedes Retirar tu compra en Av. Proceres de la independencia 1570 San Juan de Lurigancho. El día lunes 29 de julio 2025, nos vemos Miraflores. Av. 28 de Julio 1551."
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Para retirar tu compra debes presentar:"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

        </ScrollView>

        <!-- Barra de navegación inferior -->
        <LinearLayout
            android:id="@+id/bottomNavigation"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/montalvo_pink"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/navOffers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:id="@+id/navOffersIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_local_offer"
                    android:contentDescription="Ofertas"
                    app:tint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navFavorites"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:id="@+id/navFavoritesIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_star"
                    android:contentDescription="Favoritos"
                    app:tint="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:id="@+id/navSearchIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Buscar"
                    app:tint="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navCart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <View
                    android:id="@+id/navCartIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="visible"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_shopping_cart"
                    android:contentDescription="Carrito"
                    app:tint="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navLocation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:id="@+id/navLocationIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_location_on"
                    android:contentDescription="Ubicación"
                    app:tint="@color/white"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- MENÚ LATERAL (SIDEBAR) -->
    <ScrollView
        android:id="@+id/navigationDrawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/montalvo_pink"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Header del menú -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#C2185B">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_montalvo"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="16dp" />

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_user"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circle_background"/>

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stephanie Cayo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="steph.cayo@gmail.com"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.9"/>

            </LinearLayout>

            <!-- Opciones del menú -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <LinearLayout
                    android:id="@+id/menuServicios"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_build"
                        app:tint="@android:color/white"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Servicios"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="32dp"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_dropdown"
                        android:rotation="270"
                        app:tint="@android:color/white"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#FFFFFF"
                    android:alpha="0.2"/>

                <LinearLayout
                    android:id="@+id/menuNotificaciones"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        app:tint="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notificaciones"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="32dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#FFFFFF"
                    android:alpha="0.2"/>

                <LinearLayout
                    android:id="@+id/menuPuntos"
