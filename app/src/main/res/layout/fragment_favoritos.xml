<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Favoritos.FavoritosFragment">

    <!-- CONTENIDO PRINCIPAL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <!-- Header con fondo rosa -->
        <View
            android:id="@+id/headerBackground"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/montalvo_pink"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Menu Icon (Hamburguesa) -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:contentDescription="Menu"
            android:elevation="10dp"
            android:padding="8dp"
            android:src="@drawable/ic_reorder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <!-- Logo Montalvo en el centro del header -->
        <ImageView
            android:id="@+id/headerLogoImage"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:contentDescription="Logo Montalvo"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_montalvo"
            android:translationY="-23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <!-- Sección: Mis favoritos con filtros -->
        <LinearLayout
            android:id="@+id/favoritosHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerBackground">

            <TextView
                android:id="@+id/tvMisFavoritos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mis favoritos"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFilterCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="4dp"
                android:text="MANICURE Y PEDICURE"
                android:textColor="#999999"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/btnFilterCategory"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="Filtrar"
                android:src="@drawable/ic_arrow_dropdown"
                app:tint="#999999" />

        </LinearLayout>

        <!-- Grid de favoritos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFavoritos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/favoritosHeader"
            tools:listitem="@layout/item_favorito" />

        <!-- Barra de navegación inferior -->
        <LinearLayout
            android:id="@+id/bottomNavigation"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/montalvo_pink"
            android:elevation="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Icono de Ofertas -->
            <LinearLayout
                android:id="@+id/navOffers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/navOffersIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/navOffersIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Ofertas"
                    android:src="@drawable/ic_local_offer"
                    app:tint="@color/white" />
            </LinearLayout>

            <!-- Icono de Favoritos -->
            <LinearLayout
                android:id="@+id/navFavorites"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/navFavoritesIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/navFavoritesIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Favoritos"
                    android:src="@drawable/ic_star"
                    app:tint="@color/white" />
            </LinearLayout>

            <!-- Icono de Búsqueda -->
            <LinearLayout
                android:id="@+id/navSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/navSearchIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/navSearchIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Buscar"
                    android:src="@drawable/ic_search"
                    app:tint="@color/white" />
            </LinearLayout>

            <!-- Icono de Carrito -->
            <LinearLayout
                android:id="@+id/navCart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/navCartIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/navCartIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Carrito"
                    android:src="@drawable/ic_shopping_cart"
                    app:tint="@color/white" />
            </LinearLayout>

            <!-- Icono de Ubicación -->
            <LinearLayout
                android:id="@+id/navLocation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/navLocationIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/navLocationIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Ubicación"
                    android:src="@drawable/ic_location_on"
                    app:tint="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- MENÚ LATERAL (mismo que InicioFragment) -->
    <ScrollView
        android:id="@+id/navigationDrawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/montalvo_pink"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Header del menú con info del usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C2185B"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Logo Montalvo -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_montalvo" />

                <!-- Foto de perfil -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/ic_user" />

                <!-- Nombre del usuario -->
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stephanie Cayo"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Email del usuario -->
                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:text="steph.cayo@gmail.com"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Opciones del menú (igual que InicioFragment) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <!-- Aquí van todos los items del menú igual que en InicioFragment -->
                <!-- Por brevedad no los repito, cópialos del InicioFragment -->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>