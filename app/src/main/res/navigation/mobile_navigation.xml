<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/splashFragment">

    <!-- Splash -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.senati.proyectomontalvoapp.ui.splash.SplashFragment"
        android:label="Splash" >
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Login -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.senati.proyectomontalvoapp.ui.login.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_inicioFragment"
            app:destination="@id/inicioFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Inicio -->
    <fragment
        android:id="@+id/inicioFragment"
        android:name="com.senati.proyectomontalvoapp.ui.inicio.InicioFragment"
        android:label="Inicio" >
        <action
            android:id="@+id/action_inicioFragment_to_favoritosFragment"
            app:destination="@id/favoritosFragment" />
        <action
            android:id="@+id/action_inicioFragment_to_busquedaFragment"
            app:destination="@id/busquedaFragment" />
        <action
            android:id="@+id/action_inicioFragment_to_carritoFragment"
            app:destination="@id/carritoFragment" />
    </fragment>

    <!-- Favoritos -->
    <fragment
        android:id="@+id/favoritosFragment"
        android:name="com.senati.proyectomontalvoapp.ui.Favoritos.FavoritosFragment"
        android:label="Favoritos">
        <action
            android:id="@+id/action_favoritosFragment_to_inicioFragment"
            app:destination="@id/inicioFragment" />
        <action
            android:id="@+id/action_favoritosFragment_to_busquedaFragment"
            app:destination="@id/busquedaFragment" />
        <action
            android:id="@+id/action_favoritosFragment_to_carritoFragment"
            app:destination="@id/carritoFragment" />
    </fragment>

    <!-- Busqueda -->
    <fragment
        android:id="@+id/busquedaFragment"
        android:name="com.senati.proyectomontalvoapp.ui.Busqueda.BusquedaFragment"
        android:label="Busqueda">
        <action
            android:id="@+id/action_busquedaFragment_to_inicioFragment"
            app:destination="@id/inicioFragment" />
        <action
            android:id="@+id/action_busquedaFragment_to_favoritosFragment"
            app:destination="@id/favoritosFragment" />
        <action
            android:id="@+id/action_busquedaFragment_to_carritoFragment"
            app:destination="@id/carritoFragment" />
    </fragment>

    <!-- Carrito (Productos) -->
    <fragment
        android:id="@+id/carritoFragment"
        android:name="com.senati.proyectomontalvoapp.ui.Carrito.CarritoFragment"
        android:label="Carrito">
        <action
            android:id="@+id/action_carritoFragment_to_inicioFragment"
            app:destination="@id/inicioFragment" />
        <action
            android:id="@+id/action_carritoFragment_to_favoritosFragment"
            app:destination="@id/favoritosFragment" />
        <action
            android:id="@+id/action_carritoFragment_to_busquedaFragment"
            app:destination="@id/busquedaFragment" />
        <action
            android:id="@+id/action_carritoFragment_to_carritoServicioFragment"
            app:destination="@id/carritoServicioFragment" />
    </fragment>

    <!-- Carrito Servicio -->
    <fragment
        android:id="@+id/carritoServicioFragment"
        android:name="com.senati.proyectomontalvoapp.ui.Carrito.CarritoServicioFragment"
        android:label="Carrito Servicio">
        <action
            android:id="@+id/action_carritoServicioFragment_to_inicioFragment"
            app:destination="@id/inicioFragment" />
        <action
            android:id="@+id/action_carritoServicioFragment_to_favoritosFragment"
            app:destination="@id/favoritosFragment" />
        <action
            android:id="@+id/action_carritoServicioFragment_to_busquedaFragment"
            app:destination="@id/busquedaFragment" />
        <action
            android:id="@+id/action_carritoServicioFragment_to_carritoFragment"
            app:destination="@id/carritoFragment" />
    </fragment>

</navigation>